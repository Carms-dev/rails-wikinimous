<h2><%= @article.title %>
  <span>
    <%= link_to edit_article_path do %>
      <i class="fas fa-edit"></i>
    <% end %>
  </span>
  <span>
    <%= link_to article_path(@article), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </span>
</h2>
<p><%= @article.content %></p>
